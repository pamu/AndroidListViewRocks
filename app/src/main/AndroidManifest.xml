<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pamulabs.androidlistviewrocks" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SimpleListViewActivity"
            android:label="@string/title_activity_simple_list_view"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.pamulabs.androidlistviewrocks.MainActivity" />
        </activity>
        <activity
            android:name=".SlowListViewActivity"
            android:label="@string/title_activity_slow_list_view"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.pamulabs.androidlistviewrocks.MainActivity" />
        </activity>
        <activity
            android:name=".FastListViewActivity"
            android:label="@string/title_activity_fast_list_view"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.pamulabs.androidlistviewrocks.MainActivity" />
        </activity>
    </application>

</manifest>
